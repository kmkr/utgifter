<form accept-charset="UTF-8" action="/transactions" data-remote="true" method="post" class="transaction">
  <div style="margin:0;padding:0;display:inline">
    <input name="utf8" type="hidden" value="✓">
    <input name="_method" type="hidden" value="put">
  </div>
    Tid
  <input type="text" name="transaction[time]" required="required" data-type="time" value="<%= time %>" class="transaction-time" />
  <br />
  Beløp
  <input type="text" name="transaction[amount]" required="required" data-type="amount" value="<%= amount %>" />
  <br />
  Beskrivelse
  <input type="text" name="transaction[description]" required="required" data-type="description" value="<%= description %>" />

  <input name="commit" type="submit" class="submit-transaction" />
</form>
