<%= form_for transaction, :remote => true do |f| %>
  <%= f.label :time %>
  <%= f.text_field :time, :class => 'transaction-time', :size => 12 %>

  <%= f.label :amount %>
  <%= f.text_field :amount, :class => 'amount', :size => 12 %>

  <%= f.label :description %>
  <%= f.text_field :description, :class => 'description', :size => 75 %>

  <%= link_to('Slett', transaction_path(transaction), :class => 'delete_transaction', :method => :delete, :remote => true) %>

  <%= f.submit %>
<% end %>
